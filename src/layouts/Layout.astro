---
import About from "../components/About.astro";
import Experience from "../components/Experience.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Projects from "../components/Projects.astro";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main class="main">
      <About />
      <Experience />
      <Projects />
      <!-- <slot /> -->
      <Footer />
    </main>
  </body>

  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Sen:wght@400..800&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap");

    :root {
      --mainLight: rgba(255, 243, 228, 1); /* #fff3e4 */
      --mainDark: rgba(24, 24, 35, 1); /* #181823 */
      --dark: rgba(0, 0, 0, 1); /* #000000 */
      --bkg-html: rgba(91, 104, 118, 1); /* #5b6876 */
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      padding: 0;
      margin: 0;
      font-size: 16px;
      line-height: 16px;
      font-family: Sen, Inter, sans-serif;
      overflow-x: hidden;
      background-color: var(--bkg-html);
      color: var(--mainLight);
      z-index: 0;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    p {
      padding: 0;
      margin: 0;
      font-size: 16px;
      line-height: 24px;
    }

    * {
      box-sizing: border-box;
    }

    img {
      max-width: 100%;
      height: auto;
    }

    input,
    button {
      font-family: Sen, Inter, sans-serif;
      border: none;
      background: none;
      outline: none;
      color: var(--mainLight);
      font-size: 16px;
    }

    a {
      color: var(--mainLight);
      text-decoration: none;
    }

    section {
      position: relative;
      z-index: 1;
    }

    ul,
    li {
      padding: 0;
      margin: 0;
      list-style: none;
    }

    .app {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .container {
      width: 1200px;
      margin: auto;
    }

    .icon {
      width: 12px;
      height: 12px;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    input[type="number"] {
      -moz-appearance: textfield;
    }

    h1 {
      font-size: 3rem;
      line-height: 4rem;
    }

    h2 {
      color: var(--mainLight);
      font-size: 2rem;
      line-height: 3rem;
      font-weight: 700;
      text-transform: uppercase;
    }

    .main {
      max-width: 1440px;
      margin: auto;
      position: relative;
      background-color: var(--dark);
    }
  </style>
</html>
