---
import { socialsUrl } from "../content/contacts";
---

<ul class="socials">
  <li>
    <a class="socialsLink" href={socialsUrl.telegram} target="_blank">
      <img src="/telegram_icon.png" alt="telegram" />
    </a>
  </li>
  <li>
    <a class="socialsLink" href={socialsUrl.discord} target="_blank">
      <img src="/discord_icon.png" alt="discord" />
    </a>
  </li>
  <li>
    <a class="socialsLink" href={socialsUrl.linkedin} target="_blank">
      <img src="/linkedin_icon.png" alt="linkedin" />
    </a>
  </li>
  <li>
    <a class="socialsLink" href={socialsUrl.vk} target="_blank">
      <img src={"/vk_icon.png"} alt="vk" />
    </a>
  </li>
</ul>

<style>
  .socials {
    display: flex;
  }

  .socialsLink {
    padding-right: 20px;
    img {
      width: 30px;
    }
  }
</style>
